<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >




    <RelativeLayout
        android:id="@+id/order_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/order_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:text="Hello World!" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="20"

            android:layout_alignParentLeft="true"


            android:layout_marginLeft="150dp"

            android:layout_alignBottom="@id/order_no"
            android:id="@+id/order_no_Text" />

        <TextView
            android:id="@+id/production_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_no"
            android:layout_marginTop="20dp"
            android:text="production_no" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="produtction_no_name"
            android:ems="20"


            android:layout_below="@id/order_no_Text"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="150dp"


            android:id="@+id/production_no_text" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/production_no"
            android:layout_marginTop="20dp"
            android:text="date" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="date_name"
            android:ems="20"
            android:layout_below="@id/production_no_text"
            android:layout_marginLeft="150dp"
            android:id="@+id/date_text" />

        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/date"
            android:layout_marginTop="20dp"
            android:text="num" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="num"
            android:ems="20"
            android:layout_below="@id/date_text"
            android:layout_marginLeft="150dp"
            android:id="@+id/num_text" />

        <TextView
            android:id="@+id/request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/num"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="num" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="request"
            android:ems="20"
            android:layout_below="@id/request"

            android:id="@+id/request_text" />




        </RelativeLayout>

    <RelativeLayout
        android:id = "@+id/employees_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/order_info_layout"
        android:layout_marginLeft="20dp"
        >
        <ListView

            android:id = "@+id/employees_list"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:divider="@color/colorPrimaryDark"
            android:dividerHeight="1dp"
            />

    </RelativeLayout>


</RelativeLayout>
