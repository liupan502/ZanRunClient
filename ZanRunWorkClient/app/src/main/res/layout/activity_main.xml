<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    >





    <RelativeLayout
        android:id="@+id/order_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"

        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false">

        <RelativeLayout
            android:id = "@+id/firstRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/order_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:ems="5"
            android:text="订单号" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:textSize="16sp"
            android:focusable="false"
            android:layout_toRightOf="@id/order_no"
            android:id="@+id/order_no_Text" />

        <TextView
            android:id="@+id/production_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems = "5"
            android:textSize="18sp"
            android:layout_toRightOf="@id/order_no_Text"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:text="产品编号" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:textSize="16sp"
            android:focusable="false"
            android:layout_toRightOf="@id/production_no"
            android:id="@+id/production_no_text" />
        </RelativeLayout>
        <RelativeLayout
            android:id = "@+id/secondRow"
            android:layout_below="@id/firstRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems = "5"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:text="截止日期" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:textSize="16sp"
            android:focusable="false"
            android:layout_toRightOf="@id/date"
            android:id="@+id/date_text" />

        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/date_text"
            android:layout_marginLeft="20dp"
            android:ems = "5"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:text="数量" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:textSize="16sp"
            android:layout_toRightOf="@id/num"
            android:ems="10"
            android:focusable="false"
            android:id="@+id/num_text" />
        </RelativeLayout>
        <TextView
            android:id="@+id/request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/secondRow"
            android:layout_centerHorizontal="true"
            android:textSize="22sp"
            android:layout_marginTop="20dp"
            android:text="加工要求" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:focusable="false"
            android:text="豫章故郡， 洪都新府。 星分翼轸， 地接衡庐。 襟三江而带五湖， 控蛮荆而引瓯越。 物华天宝， 龙光射牛斗之墟； 人杰地灵， 徐孺下陈蕃之榻。 雄州雾列， 俊采星驰。 台隍枕夷夏之交， 宾主尽东南之美。 都督阎公之雅望， 棨戟遥临； 宇文新州之懿范， 襜帷暂驻。 十旬休假， 胜友如云； 千里逢迎， 高朋满座。 腾蛟起凤， 孟学士之词宗； 紫电青霜， 王将军之武库。 家君作宰， 路出名区； 童子何知， 躬逢胜饯。
时维九月， 序属三秋。 潦水尽而寒潭清， 烟光凝而暮山紫。 俨骖騑于上路， 访风景于崇阿； 临帝子之长洲， 得天人之旧馆。 层峦耸翠， 上出重霄； 飞阁流丹， 下临无地。 鹤汀凫渚， 穷岛屿之萦回； 桂殿兰宫， 即冈峦之体势。
披绣闼， 俯雕甍， 山原旷其盈视， 川泽纡其骇瞩。 闾阎扑地， 钟鸣鼎食之家； 舸舰迷津， 青雀黄龙之舳。 云销雨霁， 彩彻区明。 落霞与孤鹜齐飞， 秋水共长天一色。 渔舟唱晚， 响穷彭蠡之滨； 雁阵惊寒， 声断衡阳之浦。
遥襟甫畅， 逸兴遄飞。 爽籁发而清风生， 纤歌凝而白云遏。 睢园绿竹， 气凌彭泽之樽； 邺水朱华， 光照临川之笔。 四美具， 二难并。 穷睇眄于中天， 极娱游于暇日。 天高地迥， 觉宇宙之无穷； 兴尽悲来， 识盈虚之有数。 望长安于日下， 目吴会于云间。 地势极而南溟深， 天柱高而北辰远。 关山难越， 谁悲失路之人？ 萍水相逢， 尽是他乡之客。 怀帝阍而不见， 奉宣室以何年？ "
            android:ems="27"
            android:textSize="22sp"
            android:layout_below="@id/request"
            android:maxLines="10"
            android:id="@+id/request_text" />




        </RelativeLayout>

    <RelativeLayout
        android:id = "@+id/employees_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/order_info_layout"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="70dp"
        >
        <ListView
            android:id = "@+id/employees_list"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:divider="@color/colorPrimaryDark"
            android:dividerHeight="1dp"
            />

    </RelativeLayout>

    <include layout="@layout/main_activity_toolbar"/>


</RelativeLayout>
